<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View -->
    <record id="hr_leave_type_view_form" model="ir.ui.view">
        <field name="name">hr.leave.type.view.form.inherit.module</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <!-- Add fields to an existing group -->
            <xpath expr="//field[@name='requires_allocation']" position="after">
                <field name="hide_allocation_from_user" invisible="requires_allocation=='no'"/>

            </xpath>

        </field>
    </record>



    
    <!-- Inherit List View -->

</odoo>